= form_for(@measure, html: {multipart: true}) do |f|
  - if @measure.errors.any?
    #error_explanation
      %h2= "#{pluralize(@measure.errors.count, "error")} prohibited this measure from being saved:"
      %ul
        - @measure.errors.full_messages.each do |message|
          %li= message
  = f.label :title
  = f.text_field :title, autofocus: true
  = f.label :category
  = f.select 'category', options_for_select(Measure.category_options)
  = f.label :document
  = f.file_field :document
  .actions
    = f.submit 'Save', class: 'button'
