- provide(:title, 'General Resilience Measures')

= show_new_measure_link_if_admin

%h1.display-4 General Measures

%ul.list-group
  - @measures.each do |measure|
    %li.list-group-item.my-2
      %h3= link_to measure.title, measure
      - if current_user.admin?
        = link_to 'Edit', edit_measure_path(measure), class: 'btn btn-sm btn-outline-secondary'
        |
        = link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger'
