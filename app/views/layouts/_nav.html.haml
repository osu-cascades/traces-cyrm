%nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
  = link_to 'Traces CYRM', root_path
  %button.navbar-toggler{"aria-controls" => "nav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#nav", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #nav.collapse.navbar-collapse.justify-content-end
    %ul.navbar-nav
      - if user_signed_in?
        %li.nav-link
          = link_to 'General', general_measures_path
        %li.nav-link
          = link_to 'Individual', individual_measures_path
        %li.nav-link
          = link_to 'Relational', relational_measures_path
        %li.nav-link
          = link_to 'Community', community_measures_path
        - if current_user.admin?
          %li.nav-link
            = link_to 'Users', users_path
        %li.nav-item.dropdown
          %a#dropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
            = current_user.email
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdown"}
            .dropdown-item
              = link_to 'Edit Profile', edit_user_registration_path
            .dropdown-divider
            .dropdown-item
              = link_to 'Sign Out', destroy_user_session_path, method: :delete
      - else
        %li.nav-item.active
          .nav-link= link_to 'Sign In', new_user_session_path
          %span.sr-only (current)
        %li.nav-item.active
          .nav-link= link_to 'Sign Up', new_user_registration_path
