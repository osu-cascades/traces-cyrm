- provide(:title, 'Register')
.row
  .col-md-3
  .col-md-6
    %h2 Register
    %hr/
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email"
      = f.label :first_name
      = f.text_field :first_name
      = f.label :last_name
      = f.text_field :last_name
      = f.label :organization
      = f.text_field :organization
      = f.label :city
      = f.text_field :city
      = f.label :state
      = f.text_field :state
      = f.label :zip
      = f.text_field :zip
      = f.label :phone
      = f.telephone_field :phone
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off"
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off"
      .form-group
        .form-check
          = f.check_box :terms_of_service, class: 'form-check-input', id: 'terms-of-service-checkbox'
          = f.label :terms_of_service, "I agree to the #{link_to 'Terms of Service', '#', 'data-target' => '#terms-of-service', 'data-toggle' => 'modal'}.".html_safe, class: 'form-check-label'
      .actions
        = f.submit 'Register', class: 'button'
    = render 'devise/shared/links'

